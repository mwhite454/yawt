# OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback

# Cloudflare R2 (S3-compatible)
# Required to enable presigned uploads for character images.
CLOUDFLARE_S3_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
CLOUDFLARE_S3_ACCESS_KEY_ID=
CLOUDFLARE_S3_SECRET=
CLOUDFLARE_S3_BUCKET=

# Optional helpers
# CLOUDFLARE_R2_BUCKET= (alias for CLOUDFLARE_S3_BUCKET)
# R2_ENDPOINT= (alias for CLOUDFLARE_S3_ENDPOINT)
# R2_ACCESS_KEY_ID= (alias for CLOUDFLARE_S3_ACCESS_KEY_ID)
# R2_SECRET_ACCESS_KEY= (alias for CLOUDFLARE_S3_SECRET)
# GitHub OAuth Configuration
# Create a GitHub OAuth App at: https://github.com/settings/developers
# For local development, use:
# - Application name: YAWT (local)
# - Homepage URL: http://localhost:8000
# - Authorization callback URL: http://localhost:8000/auth/callback

GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback
